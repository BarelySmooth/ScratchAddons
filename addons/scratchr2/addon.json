{
  "name": "Scratch 2.0 \u2192 3.0",
  "description": "Makes Scratch 2.0-styled pages look like Scratch 3.0.",
  "tags": ["community", "theme", "recommended"],
  "credits": [
    {
      "name": "Maximouse",
      "link": "https://scratch.mit.edu/users/Maximouse/"
    }
  ],
  "customCssVariables": [
    {
      "name": "defaultLinkIconFilter",
      "value": {
        "type": "recolorFilter",
        "source": "#4d97ff"
      }
    }
  ],
  "dynamicEnable": true,
  "dynamicDisable": true,
  "injectAsStyleElt": true,
  "versionAdded": "1.1.0",
  "userstyles": [
    {
      "url": "scratchr2.css",
      "matches": ["isNotScratchWWW"]
    },
    {
      "url": "scratchr2_errors.css",
      "matches": ["isNotScratchWWW"]
    },
    {
      "url": "forums.css",
      "matches": ["https://scratch.mit.edu/discuss/*"],
      "if": {
        "settings": { "forum-userstyle": ["mxmou"] }
      }
    },
    {
      "url": "new-forums.css",
      "matches": ["https://scratch.mit.edu/discuss/*"],
      "if": {
        "settings": { "forum-userstyle": ["BarelySmooth"] }
      }
    },
    {
      "url": "forums_topic.css",
      "matches": ["https://scratch.mit.edu/discuss/topic/*/"]
    },
    {
      "url": "forums_yt.css",
      "matches": ["https://scratch.mit.edu/discuss/youtube/*/"]
    },
    {
      "url": "profile.css",
      "matches": ["https://scratch.mit.edu/users/*/", "https://scratch.mit.edu/classes/*/"]
    },
    {
      "url": "scratchr2_comments.css",
      "matches": ["https://scratch.mit.edu/users/*/"]
    },
    {
      "url": "remixtree.css",
      "matches": ["https://scratch.mit.edu/projects/*/remixtree/"]
    },
    {
      "url": "mystuff.css",
      "matches": ["https://scratch.mit.edu/mystuff/"]
    },
    {
      "url": "settings.css",
      "matches": [
        "https://scratch.mit.edu/accounts/settings/",
        "https://scratch.mit.edu/accounts/password_change/",
        "https://scratch.mit.edu/accounts/email_change/"
      ]
    },
    {
      "url": "quotes.css",
      "matches": ["https://scratch.mit.edu/info/quotes/"]
    },
    {
      "url": "experimental_dark_compatibility.css",
      "matches": ["https://scratch.mit.edu/*"]
    },
    {
      "url": "lightprimary_compatibility.css",
      "matches": ["isNotScratchWWW"]
    },
    {
      "url": "lightprimary_scratchwww_compatibility.css",
      "matches": ["scratchWWWNoProject", "projects"]
    },
    {
      "url": "lightprimary_mystuff_compatibility.css",
      "matches": [
        "https://scratch.mit.edu/mystuff/",
        "https://scratch.mit.edu/accounts/settings/",
        "https://scratch.mit.edu/accounts/password_change/",
        "https://scratch.mit.edu/accounts/email_change/"
      ]
    }
  ],
  "settings": [
    {
      "id": "primaryColor",
      "name": "Primary color",
      "type": "color",
      "default": "#4d97ff"
    },
    {
      "id": "linkColor",
      "name": "Link color",
      "type": "color",
      "default": "#4d97ff"
    },
    {
      "id": "activeColor",
      "name": "Link hover color",
      "type": "color",
      "default": "#4280d7"
    },
    {
      "id": "forum-userstyle",
      "name": "Forum Userstyle",
      "type": "select",
      "potentialValues": [
        {
          "id": "mxmou",
          "name": "mxmou"
        },
        {
          "id": "BarelySmooth",
          "name": "BarelySmooth"
        }
      ],
      "default": "mxmou"
    }
  ],
  "userscripts": [
    {
      "url": "add_class.js",
      "matches": ["https://scratch.mit.edu/discuss/*"],
      "runAtComplete": true
    }
  ]
}
